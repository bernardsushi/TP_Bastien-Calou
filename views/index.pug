include ../partials/header.pug
h1 Qui prend quoi ?
h2 Créer un événement
form(method="post" action="/party")
  div
    label(for="eventName") Nom de l'événement
    input(name="eventName" id="eventName" required minlength="3" placeholder="Nouvel an")

    label(for="auteurName") Auteur
    input(name="auteurName" id="auteurName" required minlength="0" placeholder="Ton Prénom")

    label(for="date") Date
    input(name="date" type="date" value="2020-01-01"  min="2020-01-01" max="2025-12-31" id="date" placeholder="date")

  button(type="submit") Créer
    